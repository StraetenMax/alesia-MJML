mjml
    //- Head
    mj-head
        mj-title Alesia mjml
        mj-raw.
            <meta name="color-scheme" content="light"/>
            <meta name="supported-color-schemes" content="light"/>
            <meta name="format-detection" content="telephone=no"/>
            <meta name="format-detection" content="date=no"/>
            <meta name="format-detection" content="address=no"/>
            <meta name="format-detection" content="email=no"/>

        mj-attributes
            mj-all(font-family='Arial, Helvetica, sans-serif' font-weight='300' font-size='16px' line-height='120%' color='#626262')/
            mj-image(border='none')/
            mj-button(background-color='#F45E43' color="#ffffff" font-size='14px')
        mj-breakpoint(width='480px')
        mj-font(name="Open Sans" href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap")
        mj-style.
            @media (max-width: 500px){
                h1{
                font-size:40px !important;
                font-weight:700 !important;
                line-height:40px !important;
                }
            }
             @media (max-width: 400px){
                h1{
                font-size:32px !important;
                font-weight:700 !important;
                line-height:32px !important;
                }
            }
    //- Body
    mj-body(background-color="#f2f2f2")       
        //- content
        block content
        //- map
            block map
            include ../includes/_map
        //- recommended
            block recommended
            include ../includes/_recommended
        //- footer
            block footer
            include ../includes/_footer